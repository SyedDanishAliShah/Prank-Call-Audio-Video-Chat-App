<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circle_shape.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#FFFFFF"/> <!-- Change the color as needed -->

    <!-- Optional: You can add stroke for border -->
    <stroke
        android:width="1dp"
        android:color="#0096FF"/> <!-- Change the border color as needed -->

    <!-- Optional: Add padding if needed -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>
</shape>
