<!-- user_message_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rectangle_for_message_fake_chat_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/rectangle_for_message_fake_chat"
        app:layout_constraintBottom_toTopOf="@id/current_time_tv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/type_a_message_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintTop_toTopOf="@id/rectangle_for_message_fake_chat_1"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_for_message_fake_chat_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_for_message_fake_chat_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_for_message_fake_chat_1" />

    <TextView
        android:id="@+id/current_time_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/_9ssp"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_for_message_fake_chat_1"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="@+id/rectangle_for_message_fake_chat_1"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_for_message_fake_chat_1"
        app:layout_constraintVertical_bias="0.04000002" />

</androidx.constraintlayout.widget.ConstraintLayout>
