<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/on_boarding_background">

    <ImageView
        android:id="@+id/mobile_image_of_second_on_boarding_screen"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_332sdp"
        android:src="@drawable/mobile_image_for_on_boarding_screen_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <ImageView
        android:id="@+id/girl_pic_on_boarding_screen_two"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_328sdp"
        android:src="@drawable/girl_pic_on_boarding_screen_two"
        app:layout_constraintBottom_toBottomOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintTop_toTopOf="@+id/mobile_image_of_second_on_boarding_screen" />

    <ImageView
        android:id="@+id/timer_second_on_boarding_screen"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/timer_second_on_boarding_screen"
        app:layout_constraintBottom_toBottomOf="@+id/girl_pic_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@+id/girl_pic_on_boarding_screen_two"
        app:layout_constraintStart_toStartOf="@+id/girl_pic_on_boarding_screen_two"
        app:layout_constraintTop_toTopOf="@+id/girl_pic_on_boarding_screen_two"
        app:layout_constraintVertical_bias="0.90999997" />

    <ImageView
        android:id="@+id/menu_items_rectangle_on_boarding_screen_two"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:src="@drawable/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintBottom_toBottomOf="@id/girl_pic_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@+id/timer_second_on_boarding_screen"
        app:layout_constraintStart_toStartOf="@+id/timer_second_on_boarding_screen"
        app:layout_constraintTop_toBottomOf="@+id/timer_second_on_boarding_screen"
        app:layout_constraintVertical_bias="0.32" />

    <ImageView
        android:id="@+id/mic_image"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/mic_image"
        app:layout_constraintBottom_toBottomOf="@+id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintTop_toTopOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintVertical_bias="0.52" />

    <ImageView
        android:id="@+id/camera_icon"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/camera_icon"
        app:layout_constraintBottom_toBottomOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@id/mic_image"
        app:layout_constraintTop_toTopOf="@id/menu_items_rectangle_on_boarding_screen_two" />

    <ImageView
        android:id="@+id/switch_camera_icon"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/switch_camera_icon"
        app:layout_constraintBottom_toBottomOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@id/camera_icon"
        app:layout_constraintTop_toTopOf="@id/menu_items_rectangle_on_boarding_screen_two" />

    <ImageView
        android:id="@+id/decline_icon_on_boarding_screen_two"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/decline_icon"
        app:layout_constraintBottom_toBottomOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/menu_items_rectangle_on_boarding_screen_two"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toEndOf="@id/switch_camera_icon"
        app:layout_constraintTop_toTopOf="@id/menu_items_rectangle_on_boarding_screen_two" />

    <ImageView
        android:id="@+id/front_cam_self_image_on_boarding_screen_two"
        android:layout_width="@dimen/_87sdp"
        android:layout_height="@dimen/_87sdp"
        android:src="@drawable/front_cam_self_image_on_boarding_screen_two"
        app:layout_constraintBottom_toTopOf="@id/timer_second_on_boarding_screen"
        app:layout_constraintEnd_toEndOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintTop_toTopOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintVertical_bias="0.100000024" />

    <ImageView
        android:id="@+id/face_one_of_second_on_boarding_screen"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:src="@drawable/face_one_of_second_on_boarding_screen"
        app:layout_constraintBottom_toBottomOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintEnd_toEndOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintHorizontal_bias="0.87"
        android:layout_marginBottom="@dimen/_250sdp"
        app:layout_constraintStart_toStartOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintVertical_bias="0.13" />

    <ImageView
        android:id="@+id/camera_icon_above_mobile_second_on_boarding_screen"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        android:src="@drawable/camera_icon_above_mobile_second_on_boarding_screen"
        app:layout_constraintBottom_toBottomOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintEnd_toEndOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintTop_toBottomOf="@+id/face_one_of_second_on_boarding_screen" />

    <ImageView
        android:id="@+id/second_face_on_boarding_screen_two"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_172sdp"
        android:src="@drawable/second_face_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintTop_toBottomOf="@id/front_cam_self_image_on_boarding_screen_two" />

    <TextView
        android:id="@+id/skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/skip_tv_color"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toTopOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/prank_video_call_tv_on_boarding_screen_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prank_video_call"
        android:textColor="@color/on_boarding_screen_one_prank_tv"
        android:textSize="@dimen/_21ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintStart_toStartOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintTop_toBottomOf="@+id/mobile_image_of_second_on_boarding_screen"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/video_call_full_of_fun_with_different_people_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_call_full_of_fun_with_different_people"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/prank_video_call_tv_on_boarding_screen_two"
        app:layout_constraintStart_toStartOf="@+id/prank_video_call_tv_on_boarding_screen_two"
        app:layout_constraintTop_toBottomOf="@+id/prank_video_call_tv_on_boarding_screen_two"
        app:layout_constraintVertical_bias="0.100000024" />

    <ImageView
        android:id="@+id/scrolling_icon_on_boarding_screen_two"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/scrolling_icon_of_second_on_boarding_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_call_full_of_fun_with_different_people_tv"
        app:layout_constraintVertical_bias="0.35000002" />

    <ImageView
        android:id="@+id/blue_scrolling_part_of_second_on_boarding_screen"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:src="@drawable/blue_scrolling_part_of_second_on_boarding_screen"
        app:layout_constraintBottom_toBottomOf="@id/scrolling_icon_on_boarding_screen_two"
        app:layout_constraintEnd_toEndOf="@id/scrolling_icon_on_boarding_screen_two"
        app:layout_constraintStart_toStartOf="@id/scrolling_icon_on_boarding_screen_two" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_call_full_of_fun_with_different_people_tv"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/next_tv_on_boarding_screen_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/next_button"
        app:layout_constraintEnd_toEndOf="@+id/next_button"
        app:layout_constraintStart_toStartOf="@+id/next_button"
        app:layout_constraintTop_toTopOf="@+id/next_button" />

</androidx.constraintlayout.widget.ConstraintLayout>