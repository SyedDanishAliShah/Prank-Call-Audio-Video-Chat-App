<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/celebrity_pic_prank_chat"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_19sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:foreground="@drawable/prank_chat_characters_circle_outline"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fake_chat_online_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/online_icon"
        app:layout_constraintBottom_toBottomOf="@+id/celebrity_pic_prank_chat"
        app:layout_constraintEnd_toEndOf="@+id/celebrity_pic_prank_chat"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="@+id/celebrity_pic_prank_chat"
        app:layout_constraintTop_toTopOf="@+id/celebrity_pic_prank_chat"
        app:layout_constraintVertical_bias="0.02999998" />

    <TextView
        android:id="@+id/tv_name_of_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/celebrity_pic_prank_chat"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>