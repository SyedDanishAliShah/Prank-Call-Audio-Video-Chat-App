<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rectangle_for_message_fake_chat_reply_message_view"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_for_message_fake_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/type_a_message_tv_reply_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintEnd_toEndOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintTop_toTopOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintBottom_toBottomOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        />

    <TextView
        android:id="@+id/current_time_tv_reply_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintTop_toBottomOf="@id/rectangle_for_message_fake_chat_reply_message_view"
        app:layout_constraintVertical_bias="0.07999998" />

</androidx.constraintlayout.widget.ConstraintLayout>