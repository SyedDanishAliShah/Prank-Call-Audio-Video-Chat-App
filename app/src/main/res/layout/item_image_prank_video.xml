<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_prank_video_card"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_140sdp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/imageView_prank_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />


    <ImageView
        android:id="@+id/prank_video_celebrities_image_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prank_video_celebrities_image_shadow"
        android:layout_marginTop="@dimen/_85sdp"
        />

    <TextView
        android:id="@+id/celebrity_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_83sdp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/celebrity_name_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_107sdp"
        android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>